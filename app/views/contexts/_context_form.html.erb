<div class="card-wrapper p-3">
  <%= form_for @context do |f| %>
    <% if @context.errors.any?%>
      <%= render 'contexts/errors' %>
    <% end %>
    <div class="form-group">
      <%= f.label :name, :class => "form-control-label", :value => "Context name" %>
      <%= f.text_field :name, :class => "form-control", autocomplete: 'off' %>
    </div>
    <div class="form-group">
      <%= f.label :location, :class => "form-control-label", :value => "Context location" %>
      <%= f.text_field :location, :class => "form-control", autocomplete: 'off' %>
    </div>
    <%= f.submit :class => "btn btn-sm btn-primary rounded-pill mr-auto;", value: "Save" %>
    <%= link_to 'Cancel', contexts_path, :class => 'btn btn-sm btn-link text-danger px-2' %>
	<% end %>
</div>