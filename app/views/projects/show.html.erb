<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header actions-toolbar">
        <div class="row justify-content-between align-items-center">
          <div class="col">
            <h6 class="d-inline-block mb-0"><i class="fas fa-inbox"></i> View task</h6>
          </div>
        </div>
      </div>
      <div class="card-wrapper p-3">
        <div class="form-group">
          <%= @task.name %>
        </div>
        <div class="form-group">
          <%= @task.description %>
        </div>
        <div>
          <label class="form-control-label">Due date</label>
          <%= @task.due_date %>
        </div>
        <%= link_to edit_task_path(@task), :class => "btn btn-sm btn-primary rounded-pill mr-auto;", value: "Edit" %>
        <%= link_to 'Cancel', tasks_path, :class => 'btn btn-sm btn-link text-danger px-2' %>
      </div>
    </div>
  </div>
</div>