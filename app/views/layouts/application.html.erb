<!DOCTYPE html>
<html>
  <head>
    <title>Focushift</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="application application-offset ready d-flex flex-column" style="min-height: 100vh;">
  <% if user_signed_in? %>
    <div class="container-fluid container-application">
      <%= render 'layouts/side_nav' %>
    </div>
    <div class="main-content position-relative">
      <%= render 'layouts/main_nav' %>
      <div class="page-content">
        <div class="page-title">
          <div class="row justify-content-between align-items-center">
            <div class="col-md-6 mb-3 mb-md-0">
              <h5 class="h3 font-weight-400 mb-0 text-white">Hey, <%= @active_user.first_name %>!</h5>
              <span class="text-sm text-white opacity-8">Let's get things done!</span>
            </div>
          </div>
        </div>
    <% end %>
      <%= yield %>
      <span class="empty-container" data-placeholder="Empty"></span>
      </div>
    </div>
  </body>
  <%= render 'layouts/footer' %> 
</html>