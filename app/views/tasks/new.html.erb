<div class="card">
  <div class="card-header actions-toolbar">
    <div class="row justify-content-between align-items-center">
      <div class="col">
        <h6 class="d-inline-block mb-0"><i class="fas fa-inbox"></i> New task</h6>
      </div>
    </div>
  </div>
  <div class="card-wrapper p-3">
    <%= form_for @task do |f| %>
    <div class="form-group">
      <%= f.label :name, :class => "form-control-label", :value => "Task name" %>
      <%= f.text_field :name, :class => "form-control", autocomplete: 'off' %>
    </div>
    <div class="form-group">
      <label class="form-control-label mb-0">Task description</label>
      <small class="form-text text-muted mb-2 mt-0">This textarea will autosize while you type</small>
      <%= f.text_area :description, :class => "form-control", data: {toggle: "autosize"}, rows: "1", autocomplete: 'off' %>
    </div>
    <div class="form-group">
      <label class="form-control-label">Contexts</label>
      <input type="text" class="form-control" value="" data-toggle="tags" placeholder="Type here..." />
    </div>
    <!-- Context tags -->
    <div class="form-group">
      <label class="form-control-label">Project</label>
      <select class="custom-select form-control" name="project_id" id="task[project_id]" value="Select a project">
        <% @project_options = @active_user.projects.all %>
        <% @project_options.each do |project| %>
          <option value="<%= project.id %>"><%= project.name %></option>
        <%end%>
      </select>
    </div>
    <div class="form-group">
      <label class="form-control-label">Due date</label>
      <%= f.text_field :due_date, :class => "form-control", data: {toggle: "datetime"}, placeholder: "Select date and time" %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit :class => "btn btn-sm btn-primary rounded-pill mr-auto;", value: "Save" %>
    <a href="/" role="button" class="btn btn-sm btn-link text-danger px-2">Cancel</a>
  </div>
<% end %>
</div>