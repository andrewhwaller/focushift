<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header actions-toolbar">
        <div class="row justify-content-between align-items-center">
          <div class="col">
            <h6 class="d-inline-block mb-0"><i class="fas fa-inbox"></i> <%= @task.name %></h6>
          </div>
        </div>
      </div>
      <div class="card-wrapper p-3">
        <div class="card-body">
          <div class="card-text">
            Description: <%= @task.description %>
          </div>
          <div class="card-text">
            Due date: <%= @task.due_date %>
          </div>
        </div>
        <%= link_to 'Edit', edit_task_path(@task), :class => "btn btn-sm btn-primary rounded-pill mr-auto;" %>
        <%= link_to 'Cancel', tasks_path, :class => "btn btn-sm btn-link text-danger px-2" %>
      </div>
    </div>
  </div>
</div>