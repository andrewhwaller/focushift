<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header actions-toolbar">
        <div class="row justify-content-between align-items-center">
          <div class="col">
            <h6 class="d-inline-block mb-0"><i class="fas fa-tasks"></i> New partnership</h6>
          </div>
        </div>
      </div>
      <div class="card-wrapper p-3">
        <%= form_for(@partnership) do |f| %>
        <% if @partnership.errors.any?%>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <% @partnership.errors.full_messages.each do |message| %>
              <strong>Heads up!</strong> <%= message %>
            <% end %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
		          <span aria-hidden="true">&times;</span>
	          </button>
          </div>
        <% end %>
        <div class="form-group">
          <label class="form-control-label">Partnership name</label>
          <%= f.text_field :name, :class => "form-control", autocomplete: 'off' %>
        </div>
        <div class="form-group">
          <label class="form-control-label">Partner</label>
          <%= select("partnership", "partner_id", User.all.collect {|u| [ u.email, u.id ] }, { include_blank: true }) %>
        </div>
        <%= f.submit :class => "btn btn-sm btn-primary rounded-pill mr-auto;", value: "Save" %>
        <%= link_to 'Cancel', partnerships_path, :class => 'btn btn-sm btn-link text-danger px-2' %>
      </div>
      <% end %>
    </div>
  </div>
</div>