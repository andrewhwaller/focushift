<div class="card">
  <div class="card-header actions-toolbar">
    <div class="row justify-content-between align-items-center">
      <h6 class="d-inline-block mb-0"><i class="fas fa-hands-helping"></i> Partnerships</h6>
      <%= link_to new_partnership_path, class: 'btn btn-sm btn-success btn-icon-only rounded-circle' do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>
  <div class="card-wrapper p-3">
    <span>
      <% if @partnerships.empty? %>
        <%= "Time to create a new partnership! Use the + button to get started." %>
      <% end %>
    </span>
    <div class="checklist">
      <% @partnerships.each do |partnership| %>
      <div class="card border shadow-none">
        <div class="px-3 py-2 row align-items-center">
          <div class="col-7">
            <label class="h6 text-sm" for="<%= partnership.id %>"><%= link_to partnership.name, partnership_path(partnership) %></label>
            <br>
            <i class="fas fa-user-friends"></i>
            <%= partnership.partner.email %>
          </div>
          <div class="card-meta d-inline-flex ml-sm-auto">
            <div class="actions d-inline-block">
              <div class="mr-2">
                <span>
                  <i class="far fa-check-circle mr-2"></i>
                  <%= pluralize(partnership.projects.count, "project") %>
                </span>
              </div>
            </div>
            <div class="mr-2">
              <%= link_to edit_partnership_path(partnership), :class => "action-item" do %>
                <i class="fas fa-edit"></i>
              <% end %>
            </div>
            <div class="mr-2">
              <%= button_to partnership_path(partnership), :method => :delete, :class => "action-item" do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
